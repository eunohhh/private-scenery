{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["**/dist", "**/node_modules", "**/public", "**/.next"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "ignore": ["**/dist", "**/node_modules", "**/public", "**/.next"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false
    },
    "ignore": ["**/dist", "**/node_modules", "**/public", "**/.next"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
